    <div class="card" style="width: 50rem;">
        <img src="<%= campground.image %>" class="card-img-top" alt="...">
        <div class="card-body">
            <h1 class="card-title">
                <%= campground.title %>
            </h1>
            <h2>
                <%= campground.location %>
            </h2>
            <p class="card-text">
                <%= campground.description %>
            </p>
        </div>
